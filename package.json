{
  "name": "@endless-interactive/components-library",
  "version": "0.0.4",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir components-library --check . && eslint .",
    "format": "prettier --plugin-search-dir components-library --write .",
    "publish:prod": "yarn build && npm publish ./package"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/package": "next",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "^3.50.1",
    "svelte-check": "^2.7.1",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4",
    "vite": "^4.0.0"
  },
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
